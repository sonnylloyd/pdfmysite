{% extends "base.html.twig" %}
{% block stylesheets %}
    {% stylesheets 
		'common/libs/bootstrap/css/bootstrap.css'
		'common/css/main.css'
                'common/libs/font-awesome-4.3.0/css/font-awesome.css'
		output='mainfront.css'
		filter='cssrewrite'
                filter='yui_css'
    %} 
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block body_attr %}class="pdfmysite"{% endblock %}
{% block navigation %}
    <nav class="navbar navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="{{ path('pdf_my_site_front_homepage') }}">
                    <img src="{{ asset('common/img/logo/pdfmysite.png') }}" alt="pdfmysite logo" />
                </a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="{{ path('pdf_my_site_front_homepage') }}">Home</a></li>
                    <li><a href="{{ path('pdf_my_site_front_archives') }}">Archives</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>	
{% endblock %}
{% block footer %}
    <hr>
    <footer class="footer">
        <div class="container">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="pull-left">
                        <a href="#">Terms of Service</a>    
                        <a href="#">Privacy</a>    
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <p class="muted pull-right">Â© 2013 PdfMySite. All rights reserved</p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}
{% block javascript %}
    {% javascripts
                'bundles/fosjsrouting/js/router.js'
                'js/fos_js_routes.js'
		'common/libs/jquery/js/jquery-1.11.1.min.js'
		'common/libs/bootstrap/js/bootstrap.js'
                'common/libs/notify/notify.js'
                'https://apis.google.com/js/platform.js'
                'common/js/main.js'
		output='mainfront.js'
                filter='yui_js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript" src="https://www.dropbox.com/static/api/2/dropins.js" id="dropboxjs" data-app-key="dtxosvt0zowu7uq"></script>
{% endblock %}
{% block headscript %}
    <!--[if lt IE]>
    {% javascripts
		'common/libs/bootstrap/js/ie-emulation-modes-warning.js'
                'common/libs/bootstrap/js/ie10-viewport-bug-workaround.js'
		'https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js'
		'https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js'
		output='mainfront.ie.js'
                filter='yui_js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <![endif]-->
{% endblock %}