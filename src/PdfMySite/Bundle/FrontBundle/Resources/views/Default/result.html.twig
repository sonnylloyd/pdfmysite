{% set file = 'generates/'~archives.file %}
<div class="container">
    <div class="starter-template">
        <div class="row">
            <img src="{{asset(file~'.png')}}" class="img-responsive center-block img-thumbnail"/>
        </div>
        <div class="row pdf-action-toolbar">
            <a href="{{asset(file~'.pdf')}}" target="_blank" class="btn btn-lg btn-labeled btn-success">
                Download <i class="fa fa-arrow-circle-o-down"></i>
            </a>
            <a href="{{asset(file~'.pdf',absolute=true)}}" data-filename="{{archives.file~'.pdf'}}" class="pdf-dropbox-save btn btn-lg btn-labeled btn-success">
                Save To DropBox <i class="fa fa-dropbox"></i>
            </a>
        </div>
    </div>
</div>